%h1 
  Listing roles
 
/= fancygrid :roles

= fancygrid :roles do |column, record, value|
  - case column.name
  - when :id
    = "- #{value}"
  - when :actions
    = link_to 'Show', record
    = link_to 'Edit', edit_role_path(record)
    = link_to 'Destroy', record, :confirm => 'Are you sure?', :method => :delete
    
%br
= link_to 'New Role', new_role_path
